<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/single_diy_profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        app:srcCompat="@drawable/ic_image_black_24dp" />

    <TextView
        android:id="@+id/single_diy_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/single_diy_profile_image"
        android:layout_marginStart="11dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/single_diy_profile_image"
        android:textSize="24sp"
        tools:text="Titel" />

    <TextView
        android:id="@+id/single_diy_long_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/single_diy_profile_image"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/single_diy_title"
        android:layout_below="@+id/single_diy_title"
        android:layout_marginTop="11dp"
        tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/single_diy_profile_image"
        android:layout_below="@+id/single_diy_profile_image"
        android:orientation="horizontal"
        android:weightSum="1">

        <RatingBar
            android:id="@+id/single_diy_ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/single_diy_favorite_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_favorite_color_accent" />

        <TextView
            android:id="@+id/single_diy_favorite_count"
            android:layout_width="34dp"
            android:layout_height="27dp"
            android:layout_weight="0.10"
            android:textSize="18sp"
            tools:text="50" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="32dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>